<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:mvc="http://www.springframework.org/schema/mvc"
       xsi:schemaLocation="
       		http://www.springframework.org/schema/beans
       		http://www.springframework.org/schema/beans/spring-beans.xsd
       		http://www.springframework.org/schema/mvc
       		http://www.springframework.org/schema/mvc/spring-mvc.xsd">

    <mvc:annotation-driven />

    <!-- Facades -->
    <alias name="experimentFacadeImpl" alias="experimentFacade"/>
    <bean id="experimentFacadeImpl" class="it.lf.piovra.facades.impl.ExperimentFacadeImpl" >
        <property name="experimentService" ref="experimentService" />
        <property name="experimentConverter" ref="experimentConverter" />
    </bean>

    <alias name="factorFacadeImpl" alias="factorFacade"/>
    <bean id="factorFacadeImpl" class="it.lf.piovra.facades.impl.FactorFacadeImpl" >
        <property name="factorService" ref="factorService" />
        <property name="factorConverter" ref="factorConverter" />
    </bean>

    <alias name="suiteFacadeImpl" alias="suiteFacadeImpl"/>
    <bean id="suiteFacadeImpl" class="it.lf.piovra.facades.impl.SuiteFacadeImpl" />

    <bean id="gsonUtils" class="com.google.gson.Gson"/>

    <!-- Services -->
    <alias name="experimentServiceImpl" alias="experimentService"/>
    <bean id="experimentServiceImpl" class="it.lf.piovra.services.impl.ExperimentServiceImpl" />

    <alias name="factorServiceImpl" alias="factorService"/>
    <bean id="factorServiceImpl" class="it.lf.piovra.services.impl.FactorServiceImpl" />

    <alias name="experimentConverterImpl" alias="experimentConverter"/>
    <bean id="experimentConverterImpl" class="it.lf.piovra.services.impl.ExperimentConverterImpl" >
        <property name="factorConverter" ref="factorConverter" />
    </bean>

    <alias name="factorConverterImpl" alias="factorConverter"/>
    <bean id="factorConverterImpl" class="it.lf.piovra.services.impl.FactorConverterImpl" />



</beans>
